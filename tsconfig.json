{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "**/types"
  ],
  "exclude": [
    "node_modules",
    "coverage",
  ]
}